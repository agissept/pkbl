<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

        <TextView
                style="@style/TitleDashboard"
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sektor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                style="@style/SubTitleDashboard"
                android:id="@+id/sektor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perikanan"
                app:layout_constraintStart_toStartOf="@+id/title"
                app:layout_constraintTop_toBottomOf="@+id/title" />

        <TextView
                style="@style/TitleDashboard"
                android:id="@+id/title_dana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumlah Penyaluran"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/dana"
                android:layout_width="wrap_content"
                style="@style/SubTitleDashboard"
                android:layout_height="wrap_content"
                android:text="1.000.000.000"
                app:layout_constraintEnd_toEndOf="@+id/title_dana"
                app:layout_constraintTop_toBottomOf="@+id/title_dana" />

        <TextView
                style="@style/TitleDashboard"
                android:id="@+id/title_persentase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Persentase"
                app:layout_constraintEnd_toEndOf="@+id/dana"
                app:layout_constraintTop_toBottomOf="@+id/dana" />

        <TextView
                android:id="@+id/persentase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/SubTitleDashboard"
                android:text="10%"
                app:layout_constraintEnd_toEndOf="@+id/title_persentase"
                app:layout_constraintTop_toBottomOf="@+id/title_persentase" />




    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
