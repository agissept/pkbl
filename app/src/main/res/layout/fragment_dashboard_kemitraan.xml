<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context=".ui.dashboard.kemitraan.DashboardKemitraanFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp">

            <TableRow
                    android:background="#000000">

                <TextView
                        android:textColor="#ffffff"
                        android:layout_weight="1"
                        android:text="@string/sektor"
                        android:gravity="center"/>

                <TextView
                        android:textColor="#ffffff"
                        android:layout_weight="1"
                        android:text="@string/rka"
                        android:gravity="center"/>

                <TextView
                        android:textColor="#ffffff"
                        android:layout_weight="1"
                        android:text="@string/realisasi"
                        android:gravity="center"/>
            </TableRow>

            <TableRow>

                <TextView
                        android:layout_weight="1"
                        android:text="@string/industri"
                        android:gravity="center"/>

                <TextView
                        android:layout_weight="1"
                        android:text="@string/text"
                        android:gravity="center"
                        />

                <TextView
                        android:layout_weight="1"
                        android:text="@string/text"
                        android:gravity="center"/>
            </TableRow>


            <TableRow>

                <TextView
                        android:layout_weight="1"
                        android:text="@string/perdagangan"
                        android:gravity="center"/>

                <TextView
                        android:layout_weight="1"
                        android:text="@string/text"
                        android:gravity="center"/>

                <TextView
                        android:layout_weight="1"
                        android:text="@string/text"
                        android:gravity="center"/>
            </TableRow>

            <TableRow>

                <TextView
                        android:layout_weight="1"
                        android:text="@string/pertanian"
                        android:gravity="center"/>

                <TextView
                        android:layout_weight="1"
                        android:text="@string/text"
                        android:gravity="center"/>

                <TextView
                        android:layout_weight="1"
                        android:text="@string/text"
                        android:gravity="center"/>
            </TableRow>

            <TableRow>

                <TextView
                        android:layout_weight="1"
                        android:text="@string/peternakan"
                        android:gravity="center"/>

                <TextView
                        android:layout_weight="1"
                        android:text="@string/text"
                        android:gravity="center"/>

                <TextView
                        android:layout_weight="1"
                        android:text="@string/text"
                        android:gravity="center"/>
            </TableRow>

            <TableRow>

                <TextView
                        android:layout_weight="1"
                        android:text="@string/perkebunan"
                        android:gravity="center"/>

                <TextView
                        android:layout_weight="1"
                        android:text="@string/text"
                        android:gravity="center"/>

                <TextView
                        android:layout_weight="1"
                        android:text="@string/text"
                        android:gravity="center"/>
            </TableRow>

            <TableRow>

                <TextView
                        android:layout_weight="1"
                        android:text="@string/perikanan"
                        android:gravity="center"/>

                <TextView
                        android:layout_weight="1"
                        android:text="@string/text"
                        android:gravity="center"/>

                <TextView
                        android:layout_weight="1"
                        android:text="@string/text"
                        android:gravity="center"/>
            </TableRow>

            <TableRow>

                <TextView
                        android:layout_weight="1"
                        android:text="@string/lainnya"
                        android:gravity="center"/>

                <TextView
                        android:layout_weight="1"
                        android:text="@string/text"
                        android:gravity="center"/>

                <TextView
                        android:layout_weight="1"
                        android:text="@string/text"
                        android:gravity="center"/>
            </TableRow>

            <TableRow>

                <TextView
                        android:layout_weight="1"
                        android:text="@string/total"
                        android:gravity="center"/>

                <TextView
                        android:layout_weight="1"
                        android:text="@string/text"
                        android:gravity="center"/>

                <TextView
                        android:layout_weight="1"
                        android:text="@string/text"
                        android:gravity="center"/>
            </TableRow>


        </TableLayout>
    </LinearLayout>
</ScrollView>
