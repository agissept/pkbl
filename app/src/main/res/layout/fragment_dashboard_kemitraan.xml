<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context=".ui.dashboard.kemitraan.DashboardKemitraanFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="300dp"/>

        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp">

            <TableRow
                    android:background="#000000">

                <TextView
                        android:textColor="#ffffff"
                        android:layout_weight="1"
                        android:text=" Sektor "
                        android:gravity="center"/>

                <TextView
                        android:textColor="#ffffff"
                        android:layout_weight="1"
                        android:text="RKA"
                        android:gravity="center"/>

                <TextView
                        android:textColor="#ffffff"
                        android:layout_weight="1"
                        android:text="Realisasi"
                        android:gravity="center"/>
            </TableRow>

            <TableRow>

                <TextView
                        android:layout_weight="1"
                        android:text="Industri"
                        android:gravity="center"/>

                <TextView
                        android:layout_weight="1"
                        android:text="Text"
                        android:gravity="center"
                        />

                <TextView
                        android:layout_weight="1"
                        android:text="Text"
                        android:gravity="center"/>
            </TableRow>


            <TableRow>

                <TextView
                        android:layout_weight="1"
                        android:text="Perdagangan"
                        android:gravity="center"/>

                <TextView
                        android:layout_weight="1"
                        android:text="Text"
                        android:gravity="center"/>

                <TextView
                        android:layout_weight="1"
                        android:text="Text"
                        android:gravity="center"/>
            </TableRow>

            <TableRow>

                <TextView
                        android:layout_weight="1"
                        android:text="Pertanian"
                        android:gravity="center"/>

                <TextView
                        android:layout_weight="1"
                        android:text="Text"
                        android:gravity="center"/>

                <TextView
                        android:layout_weight="1"
                        android:text="Text"
                        android:gravity="center"/>
            </TableRow>

            <TableRow>

                <TextView
                        android:layout_weight="1"
                        android:text="Peternakan"
                        android:gravity="center"/>

                <TextView
                        android:layout_weight="1"
                        android:text="Text"
                        android:gravity="center"/>

                <TextView
                        android:layout_weight="1"
                        android:text="Text"
                        android:gravity="center"/>
            </TableRow>

            <TableRow>

                <TextView
                        android:layout_weight="1"
                        android:text="Perkebunan"
                        android:gravity="center"/>

                <TextView
                        android:layout_weight="1"
                        android:text="Text"
                        android:gravity="center"/>

                <TextView
                        android:layout_weight="1"
                        android:text="Text"
                        android:gravity="center"/>
            </TableRow>

            <TableRow>

                <TextView
                        android:layout_weight="1"
                        android:text="Perikanan"
                        android:gravity="center"/>

                <TextView
                        android:layout_weight="1"
                        android:text="Text"
                        android:gravity="center"/>

                <TextView
                        android:layout_weight="1"
                        android:text="Text"
                        android:gravity="center"/>
            </TableRow>

            <TableRow>

                <TextView
                        android:layout_weight="1"
                        android:text="Lainnya"
                        android:gravity="center"/>

                <TextView
                        android:layout_weight="1"
                        android:text="Text"
                        android:gravity="center"/>

                <TextView
                        android:layout_weight="1"
                        android:text="Text"
                        android:gravity="center"/>
            </TableRow>

            <TableRow>

                <TextView
                        android:layout_weight="1"
                        android:text="Total"
                        android:gravity="center"/>

                <TextView
                        android:layout_weight="1"
                        android:text="Text"
                        android:gravity="center"/>

                <TextView
                        android:layout_weight="1"
                        android:text="Text"
                        android:gravity="center"/>
            </TableRow>


        </TableLayout>
    </LinearLayout>
</ScrollView>
